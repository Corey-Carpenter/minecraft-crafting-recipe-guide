<!-- views/images.handlebars -->
<!DOCTYPE html>
<html>
<head>
  <title>Images</title>
</head>
<body>
  <h1>Image #1</h1>
  {{#each images}}
    <img src="https://res.cloudinary.com/ddnwvsd9o/image/upload/v1687837128/gc64wfdwvlbzjdgjzib6.gif" alt="Image">
  {{/each}}
    <section class='add-comment-container'>
      <h3>
          Leave a comment!
      </h3>
      <form class='new-comment-form'>
          <label for='new_comment'>
            Comment:
          </label>
          <br>
          <textarea id='new_comment' name='new_comment' rows='2' cols='30' placeholder="Enter comment here!"></textarea>
          <br>
          <button type='submit'>
            Submit
          </button>
      </form>
    </section>
    <aside class="displayComments">
      <h2>{{Comment.text}}</h2>
      <a href="/api/comments/:id"></a><button>
      View Comment Details
      </button>
      </a>
    </aside>
  <h1>Image #2</h1>
  {{#each images}}
    <img src="https://res.cloudinary.com/ddnwvsd9o/image/upload/v1687837129/c2qsmcikvd4aojzjy6bi.gif" alt="Image2">
  {{/each}}
  <h1>TNT Crafting Guide</h1>
  {{#each images}} 
  <img src="https://res.cloudinary.com/ddnwvsd9o/image/upload/v1687995895/qcsyg0bbpiaaclxytcrl.png" alt="Image3">
  {{/each}}
</body>
</html>

